{
	"extends": [
		"tslint-microsoft-contrib"
	],
	"rulesDirectory": [
		"../tslint-misc-rules/rules",
		"../../tslint-eslint-rules/dist/rules",
		"../../tslint-origin-ordered-imports-rule/dist"
	],
	"rules": {
		"class-name": true,
		"comment-format": [
			true,
			"check-space"
		],
		"indent": [
			true,
			"tabs"
		],
		"no-eval": true,
		"no-internal-module": true,
		"no-trailing-whitespace": true,
		"no-unsafe-finally": true,
		"no-var-keyword": true,
		"one-line": [
			true,
			"check-open-brace",
			"check-whitespace"
		],
		"quotemark": [
			true,
			"single",
			"jsx-double"
		],
		"semicolon": [
			true,
			"always",
			"ignore-bound-class-methods"
		],
		"triple-equals": [
			true,
			"allow-null-check"
		],
		"typedef-whitespace": [
			true,
			{
				"call-signature": "nospace",
				"index-signature": "nospace",
				"parameter": "nospace",
				"property-declaration": "nospace",
				"variable-declaration": "nospace"
			}
		],
		"typedef": [
			true,
			"parameter",
			"property-declaration",
			"member-variable-declaration"
		],
		"variable-name": [
			true,
			"ban-keywords"
		],
		"whitespace": [
			true,
			"check-branch",
			"check-decl",
			"check-operator",
			"check-separator",
			"check-type",
			"check-module"
		],
		"object-curly-spacing": [
			true,
			"always"
		],
		"array-type": [
			true,
			"array"
		],
		"newline-before-return": true,
		"ter-newline-after-var": [
			true,
			"always"
		],
		"ter-padded-blocks": [
			true,
			{
				"blocks": "never",
				"classes": "always",
				"switches": "never"
			}
		],
		"class-method-newlines": [
			true,
			{
				"padded-classes": true
			}
		],
		"jsx-no-braces-for-string-attributes": true,
		"react-lifecycle-order": [
			true,
			"constructor",
			"getChildContext",
			"componentWillMount",
			"componentDidMount",
			"componentWillUnmount",
			"componentWillReceiveProps",
			"shouldComponentUpdate",
			"componentWillUpdate",
			"componentDidUpdate",
			"render"
		],
		"valid-jsdoc": false,
		"missing-jsdoc": false,
		"member-access": false,
		"strict-boolean-expressions": false,
		"max-line-length": false,
		"no-unsafe-any": false,
		"no-relative-imports": false,
		"ordered-imports": false,
		"no-increment-decrement": false,
		"no-cookies": false,
		"no-unnecessary-class": false,
		"completed-docs": false,
		"no-object-literal-type-assertion": false,
		"eofline": false,
		"switch-default": false,
		"no-empty-interface": false,
		"no-reserved-keywords": false,
		"no-shadowed-variable": false,
		"no-suspicious-comment": false,
		"insecure-random": false,
		"no-unnecessary-type-assertion": false,
		"no-string-based-set-timeout": false,
		"react-a11y-event-has-role": false,
		"react-a11y-role-has-required-aria-props": false,
		"react-this-binding-issue": false,
		"switch-final-break": [true, "always"],
		"prefer-template": [true, "allow-single-concat"],
		"no-void-expression": [true, "ignore-arrow-function-shorthand"],
		"no-submodule-imports": false,
		"trailing-comma": [
			true,
			{
				"multiline": "always",
				"singleline": "never",
				"esSpecCompliant": true
			}
		],
		"function-name": [
			true,
			{
				"method-regex": "^[a-z][\\w\\d]+$",
				"private-method-regex": "^[a-z][\\w\\d]+$",
				"protected-method-regex": "^[a-z][\\w\\d]+$",
				"static-method-regex": "^[a-z][\\w\\d]+$",
				"function-regex": "^[a-z][\\w\\d]+$"
			}
		],
		"origin-ordered-imports": [
			true,
			"one-blank-line",
			[
				"lib",
				"user",
				".+/redux/.+",
				".+/(/util|Util|/decorator|/enum|/constant|/config)",
				".+/interfaces",
				".+/types$",
				"\\.scss$"
			]
		]
	}
}
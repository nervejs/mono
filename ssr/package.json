{
	"name": "node-nerve",
	"version": "2.0.0",
	"description": "node server for nervejs framework",
	"main": "dist/index",
	"typings": "dist/index",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nervejs/node-nerve.git"
	},
	"keywords": [
		"framework",
		"nervejs",
		"nerve",
		"rendering"
	],
	"author": "denis.yarkeev@gmail.com",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/nervejs/node-nerve/issues"
	},
	"homepage": "https://github.com/nervejs/node-nerve#readme",
	"devDependencies": {
		"@types/cookie-parser": "^1.4.1",
		"@types/express": "^4.17.0",
		"@types/node": "^12.0.7",
		"@types/request": "^2.48.1",
		"@types/uuid": "^3.4.4",
		"retire": "^1.6.3",
		"tslint": "^5.17.0",
		"tslint-microsoft-contrib": "^6.2.0",
		"typescript": "^3.5.1",
		"version-bump-prompt": "^5.0.2"
	},
	"dependencies": {
		"browser-detect": "^0.2.28",
		"commander": "^2.20.0",
		"cookie-parser": "^1.4.4",
		"deepmerge": "^3.2.0",
		"express": "^4.17.1",
		"gettext-parser": "^4.0.0",
		"handlebars": "^4.1.2",
		"request": "^2.88.0",
		"uuid": "^3.3.2"
	},
	"scripts": {
		"clean": "rm -rf ./dist",
		"ts": "./node_modules/.bin/tsc",
		"lint": "./node_modules/.bin/tslint ./src/**/*.ts",
		"retire": "./node_modules/.bin/retire",
		"check": "npm run lint && npm run test && ./bin/check-coverage",
		"test": "./node_modules/.bin/mocha ./tests/**/*.js",
		"coverage": "./node_modules/.bin/nyc --reporter=html ./node_modules/.bin/mocha ./tests/**/*.js",
		"coverage-server": "./node_modules/.bin/http-server ./coverage",
		"build": "npm run clean && npm run ts",
		"dev": "./node_modules/.bin/tsc -w",
		"prepublish": "npm run build && npm run check && bump"
	},
	"nyc": {
		"extension": [
			".ts"
		],
		"exclude": [
			"**/*.d.ts",
			"tests/**/*",
			"utils/**/*",
			"coverage/**/*"
		]
	}
}
